{
  "name": "hubspot-deduplicator",
  "version": "1.0.0",
  "description": "Local-first HubSpot deduplication application",
  "main": "dist/main/main.js",
  "author": "",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json && shx cp src/main/package.json dist/main/package.json && shx cp src/shared/package.json dist/shared/package.json",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "compile": "npm run build && electron-builder",
    "compile:win": "npm run build && electron-builder --win",
    "compile:mac": "npm run build && electron-builder --mac",
    "compile:linux": "npm run build && electron-builder --linux",
    "start": "npm run build && electron .",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "hubspot",
    "deduplication",
    "crm"
  ],
  "dependencies": {
    "@hubspot/api-client": "^13.4.0",
    "better-sqlite3": "^12.4.6",
    "bottleneck": "^2.19.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron": "^39.2.4",
    "fuzzball": "^2.2.3",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "shx": "^0.4.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4"
  }
}
